{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "bash": "ask",
        "edit": "allow",
        "read": "allow",
        "grep": "allow",
        "patch": "allow",
        "webfetch": "allow"
    },
    "agent": {
        "reader-bedrock": {
            "mode": "primary",
            "model": "amazon-bedrock/anthropic.claude-sonnet-4-5-20250929-v1:0",
            "tools": {
                "bash": false,
            },
        },
    },
    "small_model": "amazon-bedrock/anthropic.claude-haiku-4-5-20251001-v1:0",
    "provider": {
        "amazon-bedrock": {
            "options": {
                "profile": "bedrock"
            }
        },
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "qwen2.5-coder:7b": {
                    "name": "Qwen2.5-Coder 7B",
                    "options": {
                        "numCtx": 32768,
                        "temperature": 0.7,
                        "top_k": 40,
                        "top_p": 0.9
                    }
                },
                "qwen2.5-coder:14b": {
                    "name": "qwen2.5-coder:14b"
                },
                "qwen3:8b": {
                    "name": "Qwen3 8B",
                    "options": {
                        "numCtx": 32768,
                        "temperature": 0.1,
                        "top_k": 20,
                        "top_p": 0.9
                    }
                },
                "mistral-nemo:12b": {
                    "name": "mistral-nemo:12b"
                },
                "llama3.1:8b": {
                    "name": "llama3.1:8b"
                }
            }
        }
    }
}
